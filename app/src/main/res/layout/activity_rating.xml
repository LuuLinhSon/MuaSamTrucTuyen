<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nhận xét về sản phẩm này"
        android:textColor="@color/colorTrang"
        android:textStyle="bold"
        android:textSize="18sp"
        />
    <RatingBar
        android:id="@+id/rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX=".6"
        android:scaleY=".6"
        android:transformPivotX="0dp"
        android:transformPivotY="0dp"
        android:layout_marginTop="10dp"
        android:theme="@style/changecolorratingbar"
        />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textinputtieude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edtieude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tựa đề bài nhận xét"
            android:maxLength="20"
            />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textinputnoidung"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        >

        <EditText
            android:id="@+id/ednoidung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mô tả nhận xét"
            android:maxLines="3"
            android:scrollbars="vertical"
            />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btnnhanxet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhận xét"
        android:background="@drawable/custom_button_dang_nhap"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        />

</LinearLayout>